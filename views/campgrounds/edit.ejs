<% include ../partials/header %>


<!--用row和container把内容框起来可以适应响应式布局和不会占据整个页面-->
<div class="row">
    <div class="container">
        <h1 style="text-align: center;">EDIT <%= campground.name %></h1>
        <!--让这个DIV的宽度为百分之30, margin为top是20px，其余的左右两边auto-->
        <div style="width: 30%; margin: 20px auto">
            <form action="/campgrounds/<%= campground._id %>/?_method=PUT" method="POST">
                <!--form-group相当于段落标签,就是两个表单元素之间的间距变大了,即增加了margin-bottom-->
                <div class="form-group">
                <!--这里指向的是app.js里app.post("/campgrounds"), form-control控件，可以为input元素添加CSS定制样式-->
                    <input class="form-control" type="text" value="<%= campground.name %>" name="campground[name]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" value="<%= campground.price %>" min="0.01" step="0.01" name="campground[price]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= campground.image %>" name="campground[image]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= campground.description %>" name="campground[description]">
                </div>
                <div class="form-group">
                    <!--btn-block是块级按钮(拉伸至父元素100%的宽度)-->
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
        <a href="/campgrounds">Back to campgrounds</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>
